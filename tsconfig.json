{
  "compilerOptions": {
    "declaration": true,
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "target": "ES2022",
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["**/node_modules"]
}
